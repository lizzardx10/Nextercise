<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:contentPadding="2dp"
    app:cardMaxElevation="6dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/ivSearchImage"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:contentDescription="Exercise Image"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvSearchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivSearchImage"
            android:text="Example Exercise"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSearchDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSearchTitle"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/ivSearchImage"
            android:padding="4dp"
            android:text="Exercise Description here"
            android:textSize="16sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>